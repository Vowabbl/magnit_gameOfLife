<Window x:Class="GameOfLife.UniverseSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Выберите период (Нажмите правой клавишей мыши чтобы удалть)" Height="450" Width="800">
    <Grid>
        <ListView Name ="UniverseList" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.ColumnSpan="4" Grid.Row="1" DisplayMemberPath="stateDate" Background="White" MouseLeftButtonUp="UniverseList_MouseLeftButtonUp" MouseRightButtonUp="UniverseList_MouseRightButtonUp"/>
    </Grid>
</Window>
